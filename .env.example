
# Firebase Configuration
# Get these values from your Firebase Console (https://console.firebase.google.com):
# 1. Go to Project Settings (gear icon)
# 2. Under "General" tab, scroll to "Your apps" section
# 3. Click "Add app" and choose web (</>)
# 4. Register app and copy the config values below
NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key-here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id
NEXT_PUBLIC_FIREBASE_DATABASE_URL=https://your-project-id.firebaseio.com

# Validation Service Configuration
NEXT_PUBLIC_VALIDATION_API_ENDPOINT=https://api.validation-service.com
NEXT_PUBLIC_VALIDATION_API_KEY=your-validation-api-key

# Optional: Analytics and Monitoring
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your-ga-id
